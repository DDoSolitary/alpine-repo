# Maintainer: DDoSolitary <DDoSolitary@gmail.com>
pkgname=libcork
_commit=5a01dc181c8ed4910e06e136d062f7365e70d5ee
pkgver=0.15.0.r22.$(echo $_commit | head -c5)
pkgrel=0
pkgdesc="A simple, easily embeddable cross-platform C library"
url="https://github.com/gregvirgin/libcork"
arch="all"
license="BSD-3-Clause"
depends="tzdata"
makedepends="cmake check-dev"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname/build"

prepare() {
	cd "$srcdir"
	git clone "$url"
	cd "$pkgname"
	git checkout $_commit
	git checkout $pkgver
	mkdir build
}

build() {
	cd "$builddir"
	cmake .. -DCMAKE_INSTALL_PREFIX=/usr
	make
}

check() {
	cd "$builddir"
	make test
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
