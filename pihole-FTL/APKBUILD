# Maintainer: DDoSolitary <DDoSolitary@gmail.com>
pkgname=pihole-FTL
_pkgname=FTL
pkgver=5.3.4
pkgrel=1
pkgdesc="FTLDNS™ (pihole-FTL) provides an interactive API and also generates statistics for Pi-hole®'s Web interface."
url="https://github.com/pi-hole/FTL"
arch="all"
license="EUPL-1.2"
makedepends="cmake libidn-dev gmp-dev nettle-dev nettle-static readline-dev linux-headers libcap"
source="$_pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz werror.patch"
options="!check"
builddir="$srcdir/$_pkgname-$pkgver"

prepare() {
	cd "$builddir"
	patch -Np1 -i "$srcdir/werror.patch"
	mkdir build
}

build() {
	cd "$builddir/build"
	cmake .. -DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd "$builddir/build"
	make DESTDIR="$pkgdir" install
}


sha512sums="462cf08c2ec98e5b9f208b7c309ddeb8f87551e773bc91032adf7012c81d5783b4fcf63d23f46fabc2418cf4a39f32028982508eefaed5402e10fe63fdee932f  FTL-5.3.4.tar.gz
62ae0a18588e1aac35d8cb381dc7a7caf5f6902dcdc0014f0f75baa8a8f4fd28ee355e2417e922cf983cbbaeee4f204bc9e34d53693b5d0fa9ab8eb97218da05  werror.patch"
