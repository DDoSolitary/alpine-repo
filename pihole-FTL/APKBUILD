# Maintainer: DDoSolitary <DDoSolitary@gmail.com>
pkgname=pihole-FTL
_pkgname=FTL
pkgver=5.0
pkgrel=0
pkgdesc="FTLDNS™ (pihole-FTL) provides an interactive API and also generates statistics for Pi-hole®'s Web interface."
url="https://github.com/pi-hole/FTL"
arch="all"
license="EUPL-1.2"
makedepends="gmp-dev nettle-dev nettle-static linux-headers libcap"
source="$_pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz remove-werror.patch"
options="!check"
builddir="$srcdir/$_pkgname-$pkgver"

prepare() {
	cd "$builddir"
	patch -Np1 -i remove-werror.patch
}

build() {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

